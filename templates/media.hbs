<div class="component-inner">
    {{#if title}}
    <div class="component-title">
        <h4 class="component-title-inner">
            {{{title}}}
        </h4>
    </div>
    {{/if}}
    {{#if body}}
    <div class="component-body">
        <p class="component-body-inner">
            {{{body}}}
        </p>
    </div>
    {{/if}}
    <div class="widget">
	
		{{#if media.mp3}}
			<audio src="{{media.mp3}}" type="audio/mp3"/>
		{{else}}
			{{#if media.ogg}}
				<audio src="{{media.ogg}}" type="audio/ogg"/>			
			{{else}}
				<video width="100%" height="100%">
					<source src="{{media.mp4}}" type="video/mp4"/>
					<source src="{{media.ogv}}" type="video/ogv"/>
				</video>
			{{/if}}
        {{/if}}
		
        <a href="#" class="show-transcript">show transcript</a>
    
    </div>
</div>