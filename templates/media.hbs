<div class="media-inner component-inner" role="region" aria-label="{{_globals._components._media.ariaRegion}}" {{#if _globals._components._media.ariaRegion}}tabindex="0"{{/if}}>
    {{> component this}}
    <div class="media-widget component-widget a11y-ignore-aria">

    {{#if _media.mp3}}
      <audio src="{{_media.mp3}}" type="audio/mp3" style="width: 100%; height: 100%;"/>
    {{else}}
      {{#if _media.ogg}}
        <audio src="{{_media.ogg}}" type="audio/ogg" style="width: 100%; height: 100%;"/>
      {{else}}
        <video preload="none" width="640px" height="360px" poster="{{_media.poster}}" style="width:100%; height:100%;">
          {{#if _media.source}}
            <source src="{{_media.source}}" type="{{_media.type}}"/>
          {{else}}
            <source src="{{_media.mp4}}" type="video/mp4"/>
            <source src="{{_media.ogv}}" type="video/ogg"/>
          {{/if}}
          {{#if _useClosedCaptions}}
              {{#each _media.cc}}
                  <track kind="subtitles" src="{{src}}" srclang="{{srclang}}" />
              {{/each}}
          {{/if}}
        </video>
      {{/if}}
    {{/if}}
    {{#if _media.transcriptLink}}
    <div class="media-transcript-container">
      <a href="{{_media.transcriptLink}}" target="_blank" class="media-transcript button" role="button" aria-label="{{_globals._accessibility._ariaLabels.transcript}}">
        <div class="transcript-text-container">
          {{#if _media.transcriptText}}
            {{_media.transcriptText}}
          {{else}}
            {{_media.transcriptLink}}
          {{/if}}
        </div>
      </a>
    </div>
    {{/if}}
    </div>
</div>
