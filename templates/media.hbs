<div class="component-inner">
    {{#if title}}
    <div class="component-title">
        <h4 class="component-title-inner">
            {{{title}}}
        </h4>
    </div>
    {{/if}}
    {{#if body}}
    <div class="component-body">
        <p class="component-body-inner">
            {{{body}}}
        </p>
    </div>
    {{/if}}
    <div class="widget">
        <video controls poster="{{poster}}">
            <source src="{{media.mp4}}"  type="video/mp4" />
            <source src="{{media.ogv}}"  type="video/ogg" />
            <source src="{{media.mp3}}"  type="audio/mpeg" />
            <source src="{{media.ogg}}"  type="audio/ogg" />
			
			<object id="flowplayer" data="flowplayer-3.2.16.swf" width="100%" height="100%" type="application/x-shockwave-flash">
				<param name="movie" value="flowplayer-3.2.16.swf" />
				<param name="flashVars" value="config={'clip':'{{#if media.mp4}}{{media.mp4}}{{else}}{{media.mp3}}{{/if}}'}" />
				<param name="allowFullScreen" value="true" />
				<param name="allowScriptAccess" value="always"/>
                <param name="wmode" value="opaque" />
            </object>
        </video>
		
        <a href="#" class="show-transcript">show transcript</a>
    
    </div>
</div>